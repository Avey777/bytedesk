<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="250910-rename-api_url-to-base_url" author="jackning">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="bytedesk_ai_provider"/>
                <columnExists tableName="bytedesk_ai_provider" columnName="api_url"/>
                <not>
                    <columnExists tableName="bytedesk_ai_provider" columnName="base_url"/>
                </not>
            </and>
        </preConditions>
        <comment>Rename column api_url to base_url in bytedesk_ai_provider table (only if api_url exists)</comment>
        <renameColumn
            tableName="bytedesk_ai_provider"
            oldColumnName="api_url"
            newColumnName="base_url"
            columnDataType="varchar(255)"/>
        <rollback>
            <renameColumn
                tableName="bytedesk_ai_provider"
                oldColumnName="base_url"
                newColumnName="api_url"
                columnDataType="varchar(255)"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
