<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="250821-rename-kb_type-to-kbase_type" author="jackning">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="bytedesk_kbase"/>
                <columnExists tableName="bytedesk_kbase" columnName="kb_type"/>
                <not>
                    <columnExists tableName="bytedesk_kbase" columnName="kbase_type"/>
                </not>
            </and>
        </preConditions>
        <comment>Rename column kb_type to kbase_type in bytedesk_kbase table (only if kb_type exists)</comment>
        <renameColumn
            tableName="bytedesk_kbase"
            oldColumnName="kb_type"
            newColumnName="kbase_type"
            columnDataType="varchar(255)"/>
        <rollback>
            <renameColumn
                tableName="bytedesk_kbase"
                oldColumnName="kbase_type"
                newColumnName="kb_type"
                columnDataType="varchar(255)"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
